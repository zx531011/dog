mixin CreateBox(title, content, button, imgName)
    .box(data-aos="fade-in")
        .content(data-aos="fade-in" data-aos-duraction="5000" data-aos-delay="500")
            h1=title
            p=content
            a(href="#" class="button")=button
        .picture
            img(src=imgName)

mixin CreateTitle(title, content)
    .title
        h1=title
        p=content

mixin CreatePrice(className, count, title, price)
    div(class=className)
        - for (var i=1; i<= count; i++)
            img(src="icon.png")
        h2=title
        h3=price
        ul
            li 寵物講座
            li 飼料試吃包
            li 寵物寫真
            li 寵物旅館
            li 寵物健康檢查
        a(href="#" class="button") 購買
